#!/usr/bin/env ruby

require 'iron-crawler'
require 'terminal-announce'

if ARGV.empty? || %w(-h --help help).include?(ARGV.first)
  Announce.info 'Syntax: iron-crawler <url>'
  abort
end

url = ARGV.first

Announce.info "Crawling #{url}..."
agent = Crawler.new
agent.spiderize(url)

puts agent.history
